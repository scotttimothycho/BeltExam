@model User

<h3 class="text-center">Login</h3>

<hr>
<form asp-controller="Home" asp-action="Register" method="POST">
    
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="FirstName">
        </span>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LastName">
        </span>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="UserName">
        </span>
        <input asp-for="UserName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="Password">
        </span>
        <input asp-for="Password" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="PasswordConfirm">
        </span>
        <input asp-for="PasswordConfirm" class="form-control">
    </div>

    <button class="btn btn-info" type="submit">Register</button>

</form>