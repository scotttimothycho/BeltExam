@model LoginUser

<h3 class="text-center">Login</h3>

<hr>
<form asp-controller="Home" asp-action="Login" method="POST">
    <div class="form-group">
        <label asp-for="LoginName"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LoginName">
        </span>
        <input asp-for="LoginName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span 
            class="text-danger font-weight-bold" 
            asp-validation-for="LoginPassword">
        </span>
        <input asp-for="LoginPassword" class="form-control">
    </div>
    <button class="btn btn-info" type="submit">Login</button>

</form>